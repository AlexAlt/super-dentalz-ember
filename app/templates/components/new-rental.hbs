{{#if addNewRental}}
    <h1>New Rental</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="owner">Owner</label>
          {{input value=owner id="owner"}}
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          {{input value=type id="type"}}
        </div>

        <div class="form-group">
          <label for="condition">Condition</label>
          {{input value=condition id="condition"}}
        </div>

        <div class="form-group">
          <label for="bristles">Bristle Hardness</label>
          {{input value=bristles id="bristles"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <button class="btn-xs btn-success" {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
  <button class="btn-xs btn-success" {{action 'rentalFormShow'}}>New Rental</button>
{{/if}}


{{yield}}
